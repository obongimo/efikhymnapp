<NavigationScreenManager>:
    id: screen_manager
    Screen:
        name: "welcome_page"
        MainWidget:
    Screen:
        id: menu_screen
        name: "menu_page"
        manager: screen_manager
        Menu:
    Screen:
        id: hymn_screen
        name: "hymn_page"
        manager: screen_manager
        BoxLayout:
            orientation: "vertical"
            ActionBar:
                ActionView:
                    ActionPrevious:
                        title: "Menu"
                        on_release: root.pop()
                        app_icon: ""
            HymnPage:

<SearchBox>:
    orientation: 'horizontal'
    padding: 10

    TextInput:
        id: search_input
        text: ''
        multiline: False
        on_text: root.on_text(self.text)

    Button:
        text: 'Search'
        on_press: root.on_search(search_input.text)

